<% layout("/layouts/boilerplate.ejs")%>
  <div class="row">
    <div class="col-8 offset-2 ">
    <h2>Create a new Listing</h2>
    <br>
<form action="/listings" method="POST">
  <div class="mb-3">
    <label for="title" class="form-label">Title</label>
      <input name="listing[title]" placeholder="Enter title" type="text" class="form-control">

  </div>

  <div class="mb-3">
    <label for="description" class="form-label"></label>
      <textarea name="listing[description]" placeholder="Enter description" class="form-control"></textarea>

  </div>

  <!-- Image object -->
   
      <div class="mb-3">
    <input name="listing[image][filename]" value="listingimage" type="hidden">
  </div>
   
  
    <div class="mb-3">
    <label for="image-url" class="form-label">Image URL</label>
    <input name="listing[image][url]" placeholder="Enter image URL" type="text" class="form-control" id="image-url">
  </div>

  <div class="row">
<div class="mb-3 col-md-4" >
  <label for="price" class="form-label">Price</label>
  <input name="listing[price]" placeholder="Enter price" type="number" class="form-control">
</div>



  <div class="mb-3 col-md-8">
    <label for="country" class="form-label">Country</label>
      <input name="listing[country]" placeholder="Enter county" type="text" class="form-control">

  </div>
  </div>

<div class="mb-3">
  <label for="location" class="form-label">Location</label>
    <input name="listing[location]" placeholder="Enter location" type="text" class="form-control">

</div>


  <button type="submit" class="btn btn-dark add-btn">Add</button>
  <br>
  <br>
</form>
</div>
</div>
